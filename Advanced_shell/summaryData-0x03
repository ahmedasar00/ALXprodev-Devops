#!/bin/bash

CSV_FILE="pokemon_report.csv"

# Write header
echo "Name,Height (m),Weight (kg)" > "$CSV_FILE"

TOTAL_HEIGHT=0
TOTAL_WEIGHT=0
POKEMON_COUNT=0

for file in *.json; do
    if [ -f "$file" ]; then
        # Extract values using jq
        NAME=$(jq -r '.name' "$file" | sed 's/^./\U&/')  # capitalize first letter using sed
        HEIGHT_DM=$(jq -r '.height' "$file")
        WEIGHT_HG=$(jq -r '.weight' "$file")

        # Convert to meters/kilograms using awk
        HEIGHT_M=$(awk "BEGIN {print $HEIGHT_DM / 10}")
        WEIGHT_KG=$(awk "BEGIN {print $WEIGHT_HG / 10}")

        # Append to CSV
        echo "$NAME,$HEIGHT_M,$WEIGHT_KG" >> "$CSV_FILE"

        # Accumulate totals
        TOTAL_HEIGHT=$(awk "BEGIN {print $TOTAL_HEIGHT + $HEIGHT_M}")
        TOTAL_WEIGHT=$(awk "BEGIN {print $TOTAL_WEIGHT + $WEIGHT_KG}")
        POKEMON_COUNT=$((POKEMON_COUNT + 1))
    fi
done

echo "CSV Report generated: $CSV_FILE"
cat "$CSV_FILE"

# Calculate averages
if [ "$POKEMON_COUNT" -gt 0 ]; then
    AVG_HEIGHT=$(awk "BEGIN {printf \"%.2f\", $TOTAL_HEIGHT / $POKEMON_COUNT}")
    AVG_WEIGHT=$(awk "BEGIN {printf \"%.2f\", $TOTAL_WEIGHT / $POKEMON_COUNT}")

    echo "Average Height: $AVG_HEIGHT m"
    echo "Average Weight: $AVG_WEIGHT kg"
else
    echo "No Pok√©mon JSON files found."
fi
